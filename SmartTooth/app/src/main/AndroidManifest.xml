<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adrian.upb.smarttooth">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="upb.com.smarttooth.MainActivity"
            android:label="SmartTooth"
            android:parentActivityName="upb.com.smarttooth.LookupActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="upb.com.smarttooth.LookupActivity"
            android:label="SmartTooth"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="upb.com.smarttooth.NewPacient"
            android:label="@string/title_activity_new_pacient"
            android:parentActivityName="upb.com.smarttooth.LookupActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="upb.com.smarttooth.LookupActivity" />
        </activity>
    </application>

</manifest>